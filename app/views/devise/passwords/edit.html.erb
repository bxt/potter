<div class="login-form">
  <h2>Ändere dein Passwort</h2>
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, defaults: {wrapper: :login, input_html: {class: "login-field"}}) do |f| %>

    <%= f.input :reset_password_token, :as => :hidden %>
    <%= f.full_error :reset_password_token %>


    <div class="control-group">
      <%= f.input_field :password, :required => false, :autofocus => true %>
      <%= f.label :password, raw("&nbsp;") , class: "login-field-icon fui-lock-16" %>
    </div>


    <%= f.button :submit, "Passwort zurücksetzen", class: "btn btn-primary btn-large btn-block" %>
  <% end %>

  <div class="login-links">
    <%= link_to "Einloggen", new_user_session_path %> &middot; <%= link_to "Passwort vergessen?", new_user_password_path %>
  </div>
</div>

