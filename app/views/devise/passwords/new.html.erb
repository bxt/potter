    <div class="control-group">
      <%= f.input_field :email, :required => false, :autofocus => true, placeholder: "deine Email" %>
      <%= f.label :email, raw("&nbsp;"), class: "login-field-icon fui-man-16" %>
    </div>


    <%= f.button :submit, "Passwort zurÃ¼cksetzen", class: "btn btn-primary btn-large btn-block" %>
  <% end %>

  <div class="login-links">
