<div class="login-form">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), defaults: {wrapper: :login, input_html: {class: "login-field"}}) do |f| %>
    <%= f.error_notification %>

    <div class="control-group">
      <%= f.input_field :name, :required => false, placeholder: "dein Name" %>
      <%= f.label :name, raw("&nbsp;"), class: "login-field-icon fui-man-16" %>
    </div>


    <div class="control-group">
      <%= f.input_field :email, :required => false, placeholder: "deine Email" %>
      <%= f.label :email, raw("&nbsp;"), class: "login-field-icon  fui-mail-16" %>
    </div>

    <div class="control-group">
      <%= f.input_field :password, :required => false, placeholder: "ein gutes Passwort" %>
      <%= f.label :password, raw("&nbsp;"), class: "login-field-icon fui-lock-16" %>
    </div>

    <div class="control-group">
      <%= f.input_field :password_confirmation, :required => false, placeholder: "Passwort bestÃ¤tigen" %>
      <%= f.label :password_confirmation, raw("&nbsp;"), class: "login-field-icon fui-checkround-16" %>
    </div>
    
    <%= f.button :submit, "Registrieren", class: "btn btn-primary btn-large btn-block" %>
  <% end %>

  <div class="login-links">
    <%= link_to "Einloggen", new_user_session_path %> &middot; <%= link_to "Passwort vergessen?", new_user_password_path %>
  </div>
</div>
